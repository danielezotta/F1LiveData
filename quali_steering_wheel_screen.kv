<QualiSteeringWheelScreen>

    ScatterLayout:
        size: root.width, root.height
        padding: 32
        spacing: 16

        Image:
            source: 'mask.png'
            size: 600, 600
            allow_stretch: False

        Label:
            id: gear_label
            text: "N"
            bold: True
            font_size: 96
            pos: 0, 20

        Label:
            id: rpm_label
            text: "-----"
            bold: True
            color: 1,0,0,1
            font_size: 46
            pos: 0, 115

        Label:
            text: "SPEED"
            font_size: 11
            bold: True
            pos: -250, 70

        Label:
            text_size: self.size
            id: spd_label
            text: "---"
            bold: True
            halign: 'right'
            font_size: 40
            pos: -570, 320

        Label:
            id: time_session_label
            text: "40:22"
            bold: True
            color: 1,1,0,1
            font_size: 22
            pos: 0, -70

        Label:
            id: latest_lap_label
            text: "-:--.---"
            bold: True
            color: 0,1,0,1
            font_size: 32
            pos: -185, 115

        Label:
            id: delta_label
            text: "-.--"
            bold: True
            color: 0,1,0,1
            font_size: 44
            pos: 200, 115

        Label:
            text: "LAP"
            font_size: 11
            bold: True
            pos: -256, 5

        Label:
            text_size: self.size
            id: laps_session_label
            text: "-"
            halign: 'right'
            bold: True
            font_size: 40
            pos: -570, 256

        Button:
            id: start_button
            text: "LOADING ..."
            font_size: 20
            pos: 320, 20
            size_hint: .2, .1
            on_press: root.start_telemetry()

        Button:
            id: exit_button
            text: "<-  BACK"
            font_size: 12
            pos: 20, 550
            size_hint: .1, .05
            on_press: root.exit_back()

        Label:
            id: info_label
            text: ""
            font_size: 16
            pos: 0, 260

        Label:
            id: time_label
            text: ""
            font_size: 16
            pos: 0, 240